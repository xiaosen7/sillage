{
  "name": "@sillage/monorepo",
  "version": "0.0.0",
  "scripts": {
    "dev": "tsx scripts/vite/startViteServer",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "gen": "plop",
    "typecheck": "tsx scripts/typecheck",
    "test": "vitest -c scripts/vite/vitest.config.ts",
    "test-run": "vitest -c scripts/vite/vitest.config.ts --run"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm typecheck && pnpm test-run && pnpm lint-staged"
  },
  "devDependencies": {
    "@sillage/eslint-config": "workspace:*",
    "@sillage/scripts": "workspace:*",
    "@sillage/stylelint-config": "workspace:*",
    "eslint": "^8.34.0",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.2",
    "plop": "^3.1.2",
    "prettier": "^2.8.4",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^14.2.0",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "vitest": "^0.29.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "**/*.{css,scss}": "stylelint --fix",
    "**/*": "prettier --write"
  }
}
