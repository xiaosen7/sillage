{
  "version": "0.0.0",
  "scripts": {
    "dev": "tsx ./scripts/dev",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "gen": "plop",
    "test": "vitest",
    "test-run": "vitest --run"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm test-run && pnpm lint-staged"
  },
  "devDependencies": {
    "@sillage/eslint-config": "workspace:*",
    "@sillage/scripts": "workspace:*",
    "@sillage/stylelint-config": "workspace:*",
    "@sillage/tsconfig": "workspace:*",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.34.0",
    "eslint-define-config": "^1.15.0",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.21",
    "pm2": "^5.2.2",
    "prettier": "^2.8.4",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^14.2.0",
    "tsup": "^6.6.3",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "**/*.{css,scss}": "stylelint --fix",
    "**/*": "prettier --write"
  }
